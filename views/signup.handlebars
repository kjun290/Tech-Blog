<div class='container p-3'>
    <div class='row border border-dark bg-light'>
        <div class='col bg-secondary text-white p-2' id='user-signup'>Sign Up</div>
        <form class='form signup-form'>
            <div class='form-group p-3'>
                <label for='username-signup'>Username</label>
                <input class='form-input' type='text' id='username-signup'>
            </div>
            <div class='form-group p-3'>
                <label for='signup-pw'>Password</label>
                <input class='form-input' type='text' id='signup-pw'>
            </div>
            <div class='form-group p-3'>
                <button class= 'btn btn-secondary btn-lg btn-block' type='submit'>Sign Up</button>
            </div>
            <div class='form-group p-3'>
                <a class='btn btn-link' href='/login' role='button'>Login Instead</a>
            </div>
        </form>
    </div>
</div>

